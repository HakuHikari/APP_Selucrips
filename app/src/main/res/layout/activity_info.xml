<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".InfoActivity">


  <ImageButton
      android:id="@+id/backtoprofile"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/back"
      android:background="@android:color/transparent"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:padding="16dp" />

  <TextView
      android:id="@+id/pusatbantuan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Pusat Bantuan"
      android:layout_marginTop="20dp"
      android:layout_toRightOf="@id/backtoprofile"
      android:layout_marginLeft="10dp"
      android:textColor="@color/black"
      android:textSize="25sp"
      android:textStyle="bold"
      tools:layout_editor_absoluteX="75dp"
      tools:layout_editor_absoluteY="38dp" />

  <TextView
      android:id="@+id/keterangan"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/pusatbantuan"
      android:layout_marginLeft="30dp"
      android:layout_marginTop="30dp"
      android:layout_marginRight="50dp"
      android:text="Jika anda memiliki kendala dalam pemesanan, Pengiriman atau Pengembalian Barang Silahkan Hubungi Pusat Layanan Kami"
      android:textColor="@color/black"
      android:textSize="16sp" />

  <TextView
      android:id="@+id/hubung"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Hubungi Kami"
      android:textColor="@color/black"
      android:textSize="35dp"
      android:fontFamily="@font/aestheticromance"
      android:layout_above="@id/logoWhatsApp"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="20dp"
      android:paddingTop="8dp" />

  <ImageButton
      android:id="@+id/logoWhatsApp"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:scaleType="fitXY"
      android:background="@color/transparant"
      android:src="@drawable/whatsapp"
      android:layout_centerInParent="true" />


  <!-- Nomor HP di bawah logo -->
  <TextView
      android:id="@+id/phoneNumber"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Nomor HP: +62 821-7621-0384"
      android:textColor="@color/black"
      android:textSize="20dp"
      android:layout_below="@id/logoWhatsApp"
      android:layout_centerHorizontal="true"
      android:paddingTop="8dp" />

  <!-- Versi aplikasi di pojok kiri bawah -->
  <TextView
      android:id="@+id/appVersion"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Versi 1.0.0"
      android:textColor="@color/black"
      android:layout_alignParentStart="true"
      android:layout_alignParentBottom="true"
      android:padding="8dp" />


  </RelativeLayout>