<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AdminActivity">

    <ImageButton
        android:id="@+id/profil"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/akun"
        android:background="@color/transparant"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="openProfileActivity"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/profil"
        android:layout_centerInParent="true"
        android:scaleType="fitXY"
        android:src="@drawable/logont" />

    <TextView
        android:id="@+id/tvHiUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="40sp"
        android:layout_below="@+id/logoImageView"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/aestheticromance"/>

    <TextView
        android:id="@+id/tvKemplangSeluangLemak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kemplang Seluang Lemak Nian"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@+id/tvHiUsername"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:fontFamily="@font/aestheticromance"/>

    <!-- Add the gray container with the address -->
    <LinearLayout
        android:id="@+id/grayContainer"
        android:layout_width="350dp"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tvKemplangSeluangLemak"
        android:layout_marginTop="10dp"
        android:background="@drawable/searchview_bg">

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:text="Jl. Kol. Wahid Udin, Serasan Jaya,Kec. Sekayu, Kabupaten Musi Banyuasin, Sumatera Selatan 30711"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:fontFamily="@font/aestheticromance"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/grayContainer"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/Pesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="@font/aestheticromance"/>
    </ScrollView>







</RelativeLayout>